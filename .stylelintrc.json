{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-recess-order"],
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "order/order": [
      "declarations",
      {
        "type": "at-rule"
      },
      {
        "type": "at-rule",
        "hasBlock": true
      },
      "rules"
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "deep"]
      }
    ]
  }
}
